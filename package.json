    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "latest",
    "wait-on": "latest"
  },
  "build": {
    "appId": "com.tech-toolkit.app",
    "productName": "Tech Toolkit",
    "files": [
      "dist/**/*",
